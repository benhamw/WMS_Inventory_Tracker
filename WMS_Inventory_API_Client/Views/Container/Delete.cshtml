@model WMS_Inventory_API_Client.Models.Container

@{
    ViewData["Title"] = "Delete";
    TempData["accountId"] = Html.DisplayFor(model => model.StorageLocation.AccountId);
}

<h1 class="page-header">Delete Container</h1>
<hr />
<br />
<br />

<h3 style="padding-left:35%">Are you sure you want to delete this?</h3>
<div style="padding-left:35%">
    <h4>Container</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StorageLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StorageLocation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
<div>
    <a style="color: darkred; cursor: pointer; padding-left:35%" onClick='location.href="/StorageLocation/Details/"+@TempData["accountId"]'><u>Back to Storage Location Details</u></a>
</div>

<br />
